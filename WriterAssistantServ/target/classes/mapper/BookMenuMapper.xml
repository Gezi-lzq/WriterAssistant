<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.BookMenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.entity.BookMenu">
        <id column="id" property="id" />
        <result column="passage_name" property="passageName" />
        <result column="article_length" property="articleLength" />
        <result column="state" property="state" />
        <result column="create_time" property="createTime" />
        <result column="modification_time" property="modificationTime" />
        <result column="passage_content" property="passageContent" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, passage_name, article_length, state, create_time, modification_time, passage_content
    </sql>

</mapper>
